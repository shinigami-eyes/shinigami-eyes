            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "contextMenus",
        "storage",
        "*://*/*"
    ],
    "applications": {
        "gecko": {
            "id": "shinigamieyes@shinigamieyes",
